<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    android:paddingTop="6dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="101dp"
        android:layout_height="68dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/image_view_contact_on_list" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#3498db">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/text_view_list_contact"
            android:id="@+id/text_view_name_on_list"
            android:layout_weight="0.04"
            android:paddingLeft="16dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_nikname_on_list"
            android:id="@+id/text_view_nikname_on_list"
            android:layout_weight="0.02"
            android:textColor="#ffffffff" />
    </LinearLayout>


</LinearLayout>
